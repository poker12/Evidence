<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox fx:id="paneProduct" fillWidth="true" snapToPixel="false">
         <children>
            <ToolBar prefHeight="4.0" prefWidth="200.0">
               <items>
                  <Button mnemonicParsing="false" text="Button" />
               </items>
            </ToolBar>
            <Separator />
            <SplitPane dividerPositions="0.5" prefHeight="0.0" prefWidth="1177.0">
               <items>
                  <VBox prefHeight="200.0" prefWidth="100.0" />
                  <HBox alignment="CENTER_RIGHT" prefHeight="0.0">
                     <children>
                        <ChoiceBox prefWidth="150.0" />
                        <TextField prefHeight="25.0" prefWidth="355.0" promptText="Vyhledávání" />
                     </children>
                  </HBox>
               </items>
            </SplitPane>
            <Separator />
            <TableView fx:id="entryOfGoodsTable">
               <columns>
                  <TableColumn fx:id="added" prefWidth="93.0" text="naskladněno" />
                  <TableColumn fx:id="plu" minWidth="0.0" prefWidth="79.0" text="PLU" />
                  <TableColumn fx:id="productName" prefWidth="300.0" text="produkt" />
                  <TableColumn fx:id="quantity" minWidth="0.0" prefWidth="96.0" text="množství" />
                  <TableColumn fx:id="pricePerPiece" prefWidth="106.0" text="cena za jednotku" />
                  <TableColumn fx:id="withVat" prefWidth="58.0" text="s DPH" />
                  <TableColumn fx:id="vatRate" prefWidth="444.0" text="sazba DPH (%)" />
               </columns>
            </TableView>
         </children>
      </VBox>
   </content>
</ScrollPane>
