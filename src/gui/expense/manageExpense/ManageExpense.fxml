                  <TableColumn prefWidth="110.0" text="datum splatnosti" />
                  <TableColumn prefWidth="107.0" text="způsob úhrady" />
                  <TableColumn prefWidth="95.0" text="cena s DPH" />
                  <TableColumn prefWidth="88.0" text="sazba DPH" />
                  <TableColumn prefWidth="121.0" text="dodavatel" />
                  <TableColumn prefWidth="75.0" text="popis" />
                  <TableColumn prefWidth="408.0" text="kategorie" />
               </columns>
            </TableView>
         </children>
      </VBox>
   </content>
