<ScrollPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.expense.manageExpense.ManageExpenseController">
   <content>
      <VBox fx:id="paneProduct" fillWidth="true" snapToPixel="false">
         <children>
            <ToolBar prefHeight="4.0" prefWidth="200.0">
               <items>
                  <Button mnemonicParsing="false" onAction="#addExpense" text="+" />
               </items>
            </ToolBar>
            <Separator />
            <SplitPane dividerPositions="0.5" prefHeight="0.0" prefWidth="1177.0">
               <items>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Kategorie výdaje" />
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <RadioButton mnemonicParsing="false" selected="true" text="všechny">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="expenseListSelectChoice" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton mnemonicParsing="false" text="zboží" toggleGroup="$expenseListSelectChoice" />
                              <RadioButton mnemonicParsing="false" text="režie" toggleGroup="$expenseListSelectChoice" />
                              <RadioButton mnemonicParsing="false" text="služby" toggleGroup="$expenseListSelectChoice" />
                           </children>
                        </HBox>
                     </children></VBox>
                  <HBox alignment="CENTER_RIGHT" prefHeight="0.0">
                     <children>
                        <ChoiceBox prefWidth="150.0" />
                        <TextField prefHeight="25.0" prefWidth="355.0" promptText="Vyhledávání" />
                     </children>
                  </HBox>
               </items>
            </SplitPane>
            <Separator />
            <TableView fx:id="expenseTable">
               <columns>
                  <TableColumn fx:id="billNumber" prefWidth="85.99996948242188" text="doklad" />
                  <TableColumn fx:id="billCreated" prefWidth="76.99996948242188" text="vystavení" />
                  <TableColumn fx:id="delivered" prefWidth="106.00003051757812" text="datum doručení" />
                  <TableColumn fx:id="dateOfTaxableSupply" minWidth="0.0" prefWidth="83.0" text="DUZP" />
                  <TableColumn fx:id="dueDate" prefWidth="109.0" text="datum splatnosti" />
                  <TableColumn fx:id="methodOfPayment" prefWidth="112.0" text="způsob úhrady" />
                  <TableColumn fx:id="summaryPrice" prefWidth="107.0" text="cena s DPH" />
                  <TableColumn fx:id="supplierName" prefWidth="174.0" text="dodavatel" />
                  <TableColumn fx:id="expenseCategory" prefWidth="120.0" text="kategorie" />
                  <TableColumn fx:id="expenseDescription" prefWidth="292.0" text="popis" />
               </columns>
            </TableView>
         </children>
      </VBox>
   </content>
</ScrollPane>
